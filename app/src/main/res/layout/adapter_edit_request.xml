<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvAddRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivProductOrder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image"/>

            <TextView
                android:id="@+id/tvNamaProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Anggur Hitam"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/ivProductOrder"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/tvBeratProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="500 gr/pcs"
                android:layout_below="@id/tvNamaProduct"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/ivProductOrder"/>

            <TextView
                android:id="@+id/tvTotalHarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Rp50.000,00"
                android:textColor="@color/green"
                android:layout_below="@id/tvBeratProduct"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/ivProductOrder"/>

<!--            <TextView-->
<!--                android:id="@+id/tvToko"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                tools:text="Dijual oleh Jamet"-->
<!--                android:textColor="@color/black"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_below="@id/tvTotalHarga"-->
<!--                android:layout_marginTop="8dp"-->
<!--                android:layout_toRightOf="@id/ivProductOrder"/>-->


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>