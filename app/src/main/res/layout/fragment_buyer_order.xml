<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.BuyerOrderFragment"
    android:id="@+id/navProduct"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/img_statusbayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/img_statusbayar" />

    <Button
        android:id="@+id/btnPendingOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Pending"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_below="@id/img_statusbayar"/>

    <Button
        android:id="@+id/btnProgressOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Progress"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_below="@id/btnPendingOrder"/>

    <Button
        android:id="@+id/btnFinishedOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Finish"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_below="@id/btnProgressOrder"/>


</RelativeLayout>